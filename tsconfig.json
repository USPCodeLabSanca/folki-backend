{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "dist",                      
      "rootDir": "./src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["jest", "node"],
      "typeRoots": ["./@types", "./node_modules/@types"],
      "skipLibCheck": true
    },
    "exclude": ["dist", "./src/__tests__/**", "jest.config.ts"]
}